<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/review_goto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_edit_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                app:cardBackgroundColor="#40000000"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_edit_title"
                android:text="유저 이름"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/review_keyword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:gravity="end|center"
                android:background="@drawable/shape_edit_title"
                android:text="카테고리"
                android:textColor="@color/black" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/black">
                <ImageView
                    android:id="@+id/review_image1"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />
                <ImageView
                    android:id="@+id/review_image2"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />
                <ImageView
                    android:id="@+id/review_image3"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom"
            android:background="@drawable/shape_edit_title"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/review_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰 제목"
                    android:textSize="20dp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/review_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위치 정보"
                    android:textSize="15dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|end" >
                <Button
                    android:id="@+id/review_like_btn"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:background="@drawable/vt_like_empty" />
                <TextView
                    android:id="@+id/review_like_nb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="1"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>