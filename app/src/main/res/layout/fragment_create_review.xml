<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_create_review"
    tools:context=".modal_CreateReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_title" >

            <EditText
                android:id="@+id/reviewTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="제목을 입력하세요" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/search_add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="3"
                android:drawableStart="@drawable/ic_searching"
                android:text="위치 검색"
                android:outlineProvider="none"
                android:background="@color/white" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Spinner
                android:id="@+id/spinner_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/spinner_keyword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="top|center"
            android:orientation="horizontal"
            android:background="@drawable/shape_edit_title" >
            <TextView
                android:id="@+id/address_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_margin="10dp"
                android:text="위치 검색 버튼을 눌러 추가해주세요" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edit_title" >
            <EditText
                android:id="@+id/reviewObject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="top"
                android:hint="리뷰를 입력하세요"
                android:background="@null" />
        </ScrollView>

        <TextView
            android:id="@+id/textCounter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="end"
            android:text="0/500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/reviewImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_edit_title"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/removeImage1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/ic_delete_image_btn"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/reviewImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_edit_title"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/removeImage2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/ic_delete_image_btn"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/reviewImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_edit_title"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/removeImage3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/ic_delete_image_btn"/>

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/plus_picture"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center|end"
                android:background="@drawable/ic_picture_plus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_review"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="취소"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/upload_review"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="업로드"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>